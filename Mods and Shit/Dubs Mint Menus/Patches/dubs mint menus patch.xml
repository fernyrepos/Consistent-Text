<?xml version="1.0" encoding="utf-8" ?>
<Patch>          


                <!-- Mint bill menu -->
                <Operation Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>Defs/MainButtonDef[defName="MintBillMenu"]/label</xpath>
                    <value>
                        <label>Bills</label>
                    </value>
                </Operation>


                <!-- View all bills.-->
                <Operation Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>Defs/MainButtonDef[defName="MintBillMenu"]/description</xpath>
                    <value>
                        <description>Create and manage bills for the various workbenches in your colony.</description>
                    </value>
                </Operation>





                <!-- Mint gear menu -->
                <Operation Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>Defs/MainButtonDef[defName="MintGearMenu"]/label</xpath>
                    <value>
                        <label>Gear</label>
                    </value>
                </Operation>


                <!-- View all pawns gear. -->
                <Operation Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>Defs/MainButtonDef[defName="MintGearMenu"]/description</xpath>
                    <value>
                        <description>View colony gear and easily assign it to your colonists.</description>
                    </value>
                </Operation>




</Patch>